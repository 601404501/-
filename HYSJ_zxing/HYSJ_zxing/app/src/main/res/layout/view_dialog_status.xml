<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="切换状态"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/btn_text" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:text="将号台设置为以下状态"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_content_3" />

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_bg"
                android:gravity="center"
                android:padding="15dp"
                android:text="使用中"
                android:textColor="@color/seat_purple"
                android:textSize="@dimen/size_content_1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/stand_frame_line"
                android:padding="15dp" />

            <TextView
                android:id="@+id/btn_mid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_bg"
                android:gravity="center"
                android:padding="15dp"
                android:text="空闲"
                android:textColor="@color/seat_blue"
                android:textSize="@dimen/size_content_1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/stand_frame_line"
                android:padding="15dp" />

            <TextView
                android:id="@+id/btn_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_content_1" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>