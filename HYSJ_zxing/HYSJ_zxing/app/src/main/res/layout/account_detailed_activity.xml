<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/view_titlebar_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="帐户明细"
            android:textColor="@color/stand_text_des"
            android:textSize="@dimen/details_desc"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/member_desc"/>

    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="余额变动"
            android:textColor="@color/stand_text_des"
            android:textSize="@dimen/details_desc"/>

        <TextView
            android:id="@+id/tv_money_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/member_desc"/>

    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="变动后账户余额"
            android:textColor="@color/stand_text_des"
            android:textSize="@dimen/details_desc"/>

        <TextView
            android:id="@+id/tv_money_change_after"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/member_desc"/>

    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="变动时间"
            android:textColor="@color/stand_text_des"
            android:textSize="@dimen/details_desc"/>

        <TextView
            android:id="@+id/tv_time_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/member_desc"/>

    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/stand_text_des"
            android:textSize="@dimen/details_desc"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/member_desc"/>

    </LinearLayout>
    <include layout="@layout/view_line"/>


</LinearLayout>