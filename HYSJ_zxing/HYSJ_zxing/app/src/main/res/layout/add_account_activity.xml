<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/stand_frame_line"
              android:orientation="vertical">

    <include layout="@layout/view_titlebar_white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/stand_desc"
        android:textSize="@dimen/size_content_3"
        android:text="请填写支付宝的个人信息"/>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:text="姓名"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_name"
                android:hint="请输入完整的姓名"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/stand_main_tab_text"
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:background="@null"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/view_line"/>
        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="证件类型"
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:text="身份证"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/view_line"/>
        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="证件号"
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_papers"
                android:hint="请输入证件号码"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/stand_main_tab_text"
                android:textSize="@dimen/size_content_1"
                android:maxLength="18"
                android:textColor="@color/stand_text_2"
                android:background="@null"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/view_line"/>
        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="支付宝账号"
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_number"
                android:hint="请输入支付宝账号"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/stand_main_tab_text"
                android:textSize="@dimen/size_content_1"
                android:textColor="@color/stand_text_2"
                android:background="@null"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/view_line"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_marginTop="30dp"
        android:text="确定"
       style="@style/style_btn"/>


</LinearLayout>