<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/stand_page_bg"
              android:orientation="vertical">

    <include layout="@layout/view_titlebar_white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <include layout="@layout/view_line"/>


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/mile_icon"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/cv_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="广州"
                android:textColor="@color/stand_text_2"
                android:textSize="@dimen/title_main"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_gengduo"/>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/view_line"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="店铺状态"
            android:textColor="@color/stand_text_2"
            android:textSize="@dimen/btn_text"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/sliding_selector"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
    </LinearLayout>

    <include layout="@layout/view_line"/>

</LinearLayout>