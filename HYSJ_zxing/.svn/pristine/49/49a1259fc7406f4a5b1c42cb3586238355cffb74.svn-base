<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/stand_frame_line"
              android:orientation="vertical">

    <include layout="@layout/view_titlebar_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp"
            android:text="请设置6位数的提现密码，用于提现验证"/>

        <com.hanyu.hysj.weight.passwordkey.PwdView
            android:id="@+id/pv_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.hanyu.hysj.weight.passwordkey.PwdView>

        <Button
            android:id="@+id/btn_ok"
            style="@style/style_btn"
            android:layout_marginTop="10dp"
            android:text="确定"
            />
    </LinearLayout>

    <com.hanyu.hysj.weight.passwordkey.VirtualKeyboardView
        android:id="@+id/virtualKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>