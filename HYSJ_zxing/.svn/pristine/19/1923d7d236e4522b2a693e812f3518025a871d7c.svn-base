<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/stand_frame_line"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_text"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="请输入提现密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.hanyu.hysj.weight.passwordkey.PwdView
        android:id="@+id/pv_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.hanyu.hysj.weight.passwordkey.PwdView>
    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_gravity="right"
        android:text="忘记提现密码？"
        android:padding="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.hanyu.hysj.weight.passwordkey.VirtualKeyboardView
        android:id="@+id/virtualKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>