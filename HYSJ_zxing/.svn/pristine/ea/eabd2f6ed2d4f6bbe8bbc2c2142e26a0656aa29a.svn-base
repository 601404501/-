<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/stand_page_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/view_titlebar_white"/>

    <TextView
       android:padding="15dp"
       android:text="通过发送验证码找回"
       android:textSize="@dimen/details_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include layout="@layout/view_line"/>

    <LinearLayout
        android:id="@+id/ll_1"
        android:padding="15dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:textSize="@dimen/btn_text"
            android:text="手机号码验证"
            android:textColor="@color/stand_text_2"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/icon_gengduo"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp">

        <TextView
            android:textColor="@color/stand_normal_2"
            android:textSize="@dimen/member_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"/>

        <TextView
            android:textColor="@color/stand_desc"
            android:textSize="@dimen/member_desc"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 .请确认输入的信息为个人的真实信息"/>

        <TextView
            android:textColor="@color/stand_desc"
            android:textSize="@dimen/member_desc"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 .完成后已绑卡会自动解锁"/>

    </LinearLayout>



</LinearLayout>