<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:tabStripEnabled="false"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/stand_bg_normal"
        app:tabSelectedTextColor="@color/stand_bg_normal"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/stand_text_des" />

    <com.hanyu.hysj.base.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stand_bg_light"
            android:overScrollMode="never" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
