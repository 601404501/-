<view class='header'>
  <image src='{{avatarUrl}}'></image>
  <view class='member' wx:if='{{userData.is_member === 1}}'>
    <view class='member-info'>
      <view>{{nickName}}</view>
      <view class='member-level'>{{userData.grade_name}}</view>
    </view>
    <view class='member-detail'>我的积分{{userData.integration}} | 余额：￥{{userData.wallet}}</view>
  </view>
  <view class='name' wx:else>
    <text>{{nickName}}</text>
  </view>  
</view>
<view class='list'>
  <view class='list-item' bindtap='synchronizationInfo'>
    <view class='list-icon'>
      <text class='iconfont icon-sync'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>同步微信信息</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
</view>
<view class='list'>
  <view  wx:if="{{userData.is_member == 0}}" class='list-item'>
    <view class='list-icon'>
      <text class='iconfont icon-vip'></text>
    </view>
    <view class='list-content text-between' bindtap='register'>
      <view class='list-title'>
        <text>会员注册</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
  <view  wx:if="{{userData.is_member == 1}}" class='list-item }}' bindtap='myCard' >
    <view class='list-icon'>
      <text class='iconfont icon-vip'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>会员卡</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
  <view  wx:if="{{userData.is_member == 1}}" class='list-item }}' bindtap='credit'>
    <view class='list-icon'>
      <text class='iconfont icon-recharge'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>会员卡充值</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
  <view class='list-item' bindtap='toMyCoupon'>
    <view class='list-icon'>
      <text class='iconfont icon-lucky'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>我的优惠券</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
  <view class='list-item' bindtap='toRecord'>
    <view class='list-icon'>
      <text class='iconfont icon-record'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>买单记录</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
  <view class='list-item' bindtap='toExtend'>
    <view class='list-icon'>
      <text class='iconfont icon-extend-o'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>推广</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
  <view class='list-item' bindtap='clear'>
    <view class='list-icon'>
      <text class='iconfont icon-clean'></text>
    </view>
    <view class='list-content text-between'>
      <view class='list-title'>
        <text>清除缓存</text>
      </view>
      <view class='list-right'>
        <text class='iconfont icon-right'></text>
      </view>
    </view>
  </view>
</view>