@import "../../wxParse/wxParse.wxss";
.text-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.set-pic{
  width: 100%;
  height: 750rpx;
}
.set-pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.set-info{
  padding: 30rpx;
  background-color: #FFF;
}
.set-name{
  font-size: 34rpx;
  color: #000;
  margin-bottom: 40rpx;
}
.set-intro{
  color: #999;
  font-size: 28rpx;
  margin-bottom: 36rpx;
}
.set-price{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.set-explain{
  border-top: 1rpx solid #CCC;
  padding-top: 40rpx;
}
.title-bar{
  margin: 0 auto;
  text-align: center;
  vertical-align: middle;
  padding: 20rpx 0;
}
.title-bar .line{
  display: inline-block;
  height: 1rpx;
  width: 86rpx;
  background-color: #CCC;
  vertical-align: middle;
}
.title-bar .txt{
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
  color: #000;
}
.score-box{
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #FFF;
  padding: 20rpx 0 20rpx 50rpx;
}
.score-total{
  font-size: 28rpx;
  color: #333;
  width:210rpx;
}
.score-num{
  font-size: 36rpx;
  color: #FF6589;
}
.score-num text{
  font-size: 70rpx;
}
.score-line{
  width: 1px;
  height: 54rpx;
  background-color: #EEE;
  margin-left: 37rpx;
  margin-right: 45rpx;
}
.score-btn text{
  display: inline-block;
  width: 114rpx;
  height: 56rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  color: #666;
  border: 1rpx solid #666;
  line-height: 56rpx;
  text-align: center;
  border-radius: 10rpx;
  transition: all .25s;
}
.score-btn text.active{
  color: #FF6589;
  border-color: #FF6589;
}
.score-btn{
  margin-right: -41rpx;
  margin-bottom: -20rpx;
}
.list{
  
  margin-top: 20rpx;
  padding-bottom: 100rpx;
}
.list-item{
  border-bottom: 1rpx solid #EEE;
  background-color: #FFF;
  padding: 30rpx;
}
.list-item:last-child{
  border-bottom: 0;
}
.evaluate-header{
  float: left;
  width: 88rpx;
  height: 88rpx;
}
.evaluate-header image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.evaluate-info{
  margin-left: 107rpx;
}
.evaluate-name{
  font-size: 34rpx;
  color: #000;
  margin-bottom: 20rpx;
}
.evaluate-time{
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.evaluate-star{
  color: #CCC;
  margin-bottom: 20rpx;
}
.evaluate-star text{
  margin-right: 10rpx;
}
.evaluate-star text.active{
  color: #FF6589;
}
.evaluate-star text:last-child{
  color: #FF6589;
}
.evaluate-content{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.evaluate-img{
  margin-right: -20rpx;
}
.evaluate-img::after{
  display: block;
  clear: both;
  content: ' ';
}
.evaluate-img image{
  display: block;
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.evaluate-type{
  font-size: 24rpx;
  color: #999;
}
.confirm{
  background-color: #FF86A5;
  color: #FFF;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.noData{text-align:center; margin:200rpx 0; color:#999;}