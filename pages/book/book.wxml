<!--pages/ordered/ordered.wxml-->
<view class="body">
  <view class="topInfo box">
    <image class="shopImg" src="{{shop.logo}}"></image>
    <view class="shopInfo">
      <view>
        <image class="topIcon" src="../img/book_icon_shop.png" ></image>
        {{shop.shop_name}}</view>
      <view>
        <image class="topIcon" src="../img/book_icon_position.png" ></image>
        {{shop.address}}</view>
      <view>
        <image class="topIcon" src="../img/book_icon_businesshours.png" ></image>
        营业时间：{{shop.business_s}}-{{shop.business_e}}</view>
    </view>
  </view>

  <view class="list ">
    <view class="manInfo box">
      <image class="manImg" src="../img/02.png"></image>
      <view class="manDetail">
        <view class="manRow name">小白兔</view>
        <view class="manRow titles">助理美导师</view>
        <view class="manRow or">已被约：100</view>
      </view>
      <button class="btn" bindtap='toBookInof'>马上预约</button>
    </view>
  </view>
</view>

