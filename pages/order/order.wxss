.no-order{
  color: #CCC;
  font-size: 28rpx;
  text-align: center;
  padding-top: 430rpx;
}
.no-order .icon-no-data{
  font-size: 160rpx;
  
  margin-bottom: 28rpx;
}
.list-item{
  background-color: #FFF;
  margin-top: 20rpx;
}
.text-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-header .name{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.list-header .state{
  font-size: 26rpx;
  color: #000;
}
.list-body{
  border-top: 1rpx solid #EEE;
  border-bottom: 1rpx solid #EEE;
  font-size: 28rpx;
  color: #666;
}
.list-body .actual{
  font-weight: bold;
  color: #000;
}
.list-body .text-right{
  margin-top: 20rpx;
}
.text-right{
  text-align: right;
}
.btn{
  font-size: 28rpx;
  display: inline-block;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #000;
  color: #000;
  margin-left: 20rpx;
}
.btn-cancel{
  border-color: #FD641E;
  color: #FD641E;
}
.list-header,
.list-body,
.list-footer{
  padding: 25rpx 30rpx;
}