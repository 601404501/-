page{
  background-color: #F8F8F8;
}
.room-pic{
  width: 280rpx;
  height: 220rpx;
  float: left;
}
.room-pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.room-info{
  margin-left: 309rpx;
  height: 220rpx;
  padding: 65rpx 0 0 0;
  box-sizing: border-box;
  position: relative;
}
.list-item{
  padding: 30rpx;
  background-color: #FFF;
  margin-bottom: 20rpx;
}
.room-name{
  font-size: 32rpx;
  color: #000;
  margin-bottom: 28rpx;
}
.room-nums{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.room-btn{
  padding: 20rpx 35rpx;
  font-size: 28rpx;
  color: #FFF;
  background-color: #FF86A5;
  border-radius: 10rpx;
  display: inline-block;
  position: absolute;
  right: 0;
  top: 77rpx;
}